<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIcon?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>
<StackPane minHeight="600.0" minWidth="1000.0" xmlns="http://javafx.com/javafx/17.0.2-ea"
           xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controller.prof.AssenzeController">

    <stylesheets>
        <URL value="@../../css/assenze.css"/>
    </stylesheets>


    <children>
        <BorderPane fx:id="mainPane" visible="true">
            <center>
                <VBox alignment="TOP_CENTER" spacing="10.0" BorderPane.alignment="CENTER">
                    <children>
                        <HBox alignment="CENTER" prefHeight="40.0" prefWidth="1050.0" spacing="20.0">

                            <children>

                                <FontAwesomeIcon fill="104d89" iconName="ARROW_LEFT" onMouseClicked="#mesePrecedente"
                                                 size="20" styleClass="iconaFreccia">
                                </FontAwesomeIcon>

                                <Label fx:id="monthLabel"/>

                                <FontAwesomeIcon fill="104d89" iconName="ARROW_RIGHT" onMouseClicked="#meseSuccessivo"
                                                 size="20" styleClass="iconaFreccia">
                                </FontAwesomeIcon>

                            </children>
                        </HBox>

                        <GridPane fx:id="calendarGrid" styleClass="calendar-griglia" VBox.vgrow="SOMETIMES">
                            <columnConstraints>
                                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0"
                                                   prefWidth="100.0"/>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                            </rowConstraints>
                        </GridPane>

                        <Button fx:id="addAssenzaButton" maxHeight="-Infinity" maxWidth="-Infinity"
                                minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false"
                                onAction="#showAddAssenzaPane" styleClass="buttons" text="Aggiungi Assenze"
                                textAlignment="CENTER" wrapText="true">
                        </Button>

                    </children>

                    <BorderPane.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </BorderPane.margin>

                </VBox>

            </center>
            <top>
                <BorderPane fx:id="topPane" minHeight="-Infinity" prefHeight="200.0" prefWidth="1050.0"
                            BorderPane.alignment="TOP_CENTER">
                    <bottom>
                        <Label styleClass="titolo" text="Gestione presenze" BorderPane.alignment="CENTER">
                            <BorderPane.margin>
                                <Insets bottom="10.0"/>
                            </BorderPane.margin>
                        </Label>
                    </bottom>
                    <center>
                        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0"
                              BorderPane.alignment="CENTER">
                            <children>
                                <Label styleClass="classe" text="Classe"/>
                                <Label fx:id="classLabel" styleClass="classe"/>
                            </children>
                        </HBox>
                    </center>
                    <top>
                        <HBox prefHeight="50.0" prefWidth="1050.0" spacing="40.0" BorderPane.alignment="TOP_RIGHT">
                            <children>
                                <FontAwesomeIcon iconName="ARROW_LEFT" onMouseClicked="#backButtonClicked" size="30"
                                                 styleClass="iconaFreccia">
                                    <HBox.margin>
                                        <Insets left="5.0" top="5.0"/>
                                    </HBox.margin>
                                </FontAwesomeIcon>

                            </children>
                        </HBox>
                    </top>
                </BorderPane>
            </top>
        </BorderPane>
        <BorderPane fx:id="inputPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
                    minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" styleClass="mainPane">
            <top>
                <BorderPane prefHeight="118.0" prefWidth="600.0" styleClass="topPane" BorderPane.alignment="CENTER">
                    <bottom>
                        <Label styleClass="titolo" text="Inserisci assenza" BorderPane.alignment="CENTER">
                            <BorderPane.margin>
                                <Insets bottom="20.0"/>
                            </BorderPane.margin>
                        </Label>
                    </bottom>
                    <top>
                        <HBox alignment="CENTER_RIGHT" prefHeight="34.0" prefWidth="600.0"
                              BorderPane.alignment="CENTER">
                            <children>
                                <FontAwesomeIcon iconName="ARROW_LEFT" onMouseClicked="#onCancelAddAbsence" size="30"
                                                 styleClass="iconaFreccia">
                                    <HBox.margin>
                                        <Insets right="5.0" top="5.0"/>
                                    </HBox.margin>
                                </FontAwesomeIcon>
                            </children>
                        </HBox>
                    </top>
                </BorderPane>
            </top>
            <center>
                <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="20.0"
                      BorderPane.alignment="CENTER">
                    <children>
                        <ChoiceBox fx:id="studentChoiceBox" prefHeight="34.0" prefWidth="213.0"/>
                        <DatePicker fx:id="absenceDatePicker" prefHeight="34.0" prefWidth="213.0"/>
                        <Button fx:id="assenzaButton" mnemonicParsing="false" onAction="#aggiungiAssenzaStudente"
                                styleClass="buttons" text="Inserisci">
                            <VBox.margin>
                                <Insets top="30.0"/>
                            </VBox.margin>
                        </Button>
                    </children>
                </VBox>
            </center>
        </BorderPane>
    </children>
</StackPane>
