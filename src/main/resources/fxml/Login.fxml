<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import java.net.URL?>
<BorderPane prefHeight="450.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="application.controller.LoginController">

    <stylesheets>
        <URL value="@../css/login.css"/>
    </stylesheets>

    <left>
        <BorderPane fx:id="LeftPane" prefHeight="200.0" prefWidth="200.0"
                    style="-fx-background-color: linear-gradient(to bottom, #E3F2FD, #90CAF9);"
                    BorderPane.alignment="CENTER">

            <center>
                <VBox alignment="CENTER" spacing="10.0" BorderPane.alignment="CENTER">
                    <children>
                        <ImageView fx:id="logoView" fitHeight="271.0" fitWidth="287.0" layoutX="28.0" layoutY="37.0"
                                   pickOnBounds="true" preserveRatio="true"/>
                        <Label fx:id="nuovaRegistrazioneLabel" layoutX="80.0" layoutY="325.0"
                               text="Non sei ancora registrato?">
                            <VBox.margin>
                                <Insets top="25.0"/>
                            </VBox.margin>
                        </Label>
                        <Button fx:id="registrationButton" layoutX="121.0" layoutY="358.0" mnemonicParsing="false"
                                onAction="#registrationClicked" prefHeight="40.0" prefWidth="120.0" text="Sign In">
                            <font>
                                <Font size="15.0"/>
                            </font>
                        </Button>
                    </children>
                    <BorderPane.margin>
                        <Insets bottom="10" left="50" right="50" top="10"/>
                    </BorderPane.margin>
                </VBox>
            </center>
        </BorderPane>
    </left>
    <center>
        <BorderPane prefHeight="200.0" prefWidth="200.0"
                    style="-fx-background-color: linear-gradient(to bottom, #FFFDE7, #FFF59D);"
                    BorderPane.alignment="CENTER">
            <center>
                <VBox alignment="CENTER" spacing="15.0" BorderPane.alignment="CENTER">
                    <children>
                        <FontAwesomeIcon fill="#1976D2" iconName="USERS" layoutX="163.0" layoutY="133.0" size="50"
                                         text="ïƒ€"/>
                        <Label fx:id="welcomeText" alignment="CENTER" layoutX="128.0" layoutY="154.0"
                               minWidth="-Infinity" style="-fx-background-color: #90CAF9; -fx-text-fill: #ffffff;"
                               text="WELCOME">
                            <font>
                                <Font size="23.0"/>
                            </font>
                        </Label>

                        <GridPane alignment="CENTER" prefHeight="105.0" prefWidth="313.0" VBox.vgrow="NEVER">
                            <columnConstraints>
                                <ColumnConstraints halignment="CENTER" hgrow="NEVER" maxWidth="153.0" minWidth="10.0"
                                                   prefWidth="40.0"/>
                                <ColumnConstraints halignment="CENTER" hgrow="NEVER" maxWidth="266.0" minWidth="10.0"
                                                   prefWidth="213.0"/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                            </rowConstraints>
                            <children>
                                <FontAwesomeIcon fill="#1976D2" iconName="USER" size="20"/>
                                <TextField fx:id="userField" promptText="Username"
                                           style="-fx-background-color: transparent; -fx-border-color: #1976D2; -fx-border-width: 0px 0px 2px 0px;"
                                           GridPane.columnIndex="1">
                                    <font>
                                        <Font size="16.0"/>
                                    </font>
                                </TextField>
                                <HBox alignment="CENTER" GridPane.columnIndex="1" GridPane.rowIndex="1">
                                    <children>
                                        <StackPane>
                                            <children>
                                                <PasswordField fx:id="passwordField" promptText="Password"
                                                               style="-fx-background-color: transparent; -fx-border-color: #1976D2; -fx-border-width: 0px 0px 2px 0px;">
                                                    <font>
                                                        <Font size="16.0"/>
                                                    </font>
                                                </PasswordField>

                                                <TextField fx:id="passwordVisibleField" promptText="Password visibile"
                                                           style="-fx-background-color: transparent; -fx-border-color: #1976D2; -fx-border-width: 0px 0px 2px 0px;"
                                                           visible="false">
                                                    <font>
                                                        <Font size="16.0"/>
                                                    </font>
                                                </TextField>
                                            </children>
                                            <padding>
                                                <Insets right="10.0"/>
                                            </padding>
                                        </StackPane>
                                        <FontAwesomeIcon fx:id="toggleIconPassword" fill="#1976D2" iconName="EYE"
                                                         onMouseClicked="#togglePasswordVisibility" size="20"/>
                                    </children>
                                </HBox>
                                <FontAwesomeIcon fill="#1976D2" iconName="USER" size="20"/>
                                <FontAwesomeIcon fill="#1976D2" iconName="KEY" size="20" GridPane.rowIndex="1"/>
                            </children>
                            <VBox.margin>
                                <Insets bottom="20.0" left="35.0" right="35.0" top="20.0"/>
                            </VBox.margin>
                        </GridPane>
                        <Button fx:id="loginButton" layoutX="150.0" layoutY="358.0" minWidth="-Infinity"
                                mnemonicParsing="false" onAction="#loginClicked" prefHeight="40.0" prefWidth="120.0"
                                text="Login">
                            <cursor>
                                <Cursor fx:constant="HAND"/>
                            </cursor>
                            <font>
                                <Font size="15.0"/>
                            </font>
                        </Button>
                    </children>
                    <BorderPane.margin>
                        <Insets top="35.0"/>
                    </BorderPane.margin>
                </VBox>
            </center>
        </BorderPane>
    </center>
</BorderPane>
